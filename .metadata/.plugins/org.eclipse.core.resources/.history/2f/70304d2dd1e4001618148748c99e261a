import java.util.*;

public class A211206 {
	public static void main (String args[]) {
		solve();
	}
	
	public static void solve() {
		Scanner in = new Scanner(System.in);
		int[][] table = new int[5][5];		
		int n = in.nextInt();
		int sum = 0;
		for (int i = 0; i < n; i++){
			int x1 = in.nextInt();
			int y1 = in.nextInt();
			int x2 = in.nextInt();
			int y2 = in.nextInt();
			
			//sum += (x1-x2+1)*(y1-y2+1);
			
			for (int j = x1; j <= x2; j++){
				for (int k = y1; k <= y2; k++){
					table[j][k]++;
				}
			}
		}
		
		for (int i = 0; i < 5; i++){
			for(int j = 0; j < 5; j++){
				sum += table[i][j];
			}
		}

		System.out.println(sum);
		
		
		
		
	}
}
